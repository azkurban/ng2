{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"noEmitHelpers": true,
		"importHelpers": true,
		"strictNullChecks": false,
		"skipLibCheck": true,
		"lib": [
			"dom",
			"es6"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"hammerjs",
			"jasmine",
			"node",
			"uglify-js",
			"webpack"
		],
		"baseUrl": "./",
		"paths": {
			"ng2-qgrid/core/*": [
				"core/*"
			],
			"ng2-qgrid/*": [
				"src/*"
			],
			"ng2-qgrid/plugin/*": [
				"plugin/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"compileOnSave": true,
	"buildOnSave": true,
	"atom": {
		"rewriteTsconfig": false
	}
}
